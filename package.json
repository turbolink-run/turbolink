{
  "name": "turbolink",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "dev": "pnpm with-env next dev",
    "build": "pnpm with-env next build",
    "lint": "pnpm with-env next lint",
    "pages:build": "pnpm with-env next-on-pages",
    "pages:preview": "pnpm run pages:build && wrangler pages dev",
    "pages:deploy": "pnpm run pages:build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "db:up": "pnpm with-env drizzle-kit up",
    "db:check": "pnpm with-env drizzle-kit check",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:push": "pnpm with-env drizzle-kit push",
    "db:push:local": "pnpm with-env pnpm with-local-db drizzle-kit push --config drizzle.local.config.ts",
    "db:migrate": "pnpm with-env drizzle-kit migrate",
    "db:migrate:local": "pnpm with-env pnpm with-local-db drizzle-kit migrate --config drizzle.local.config.ts",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "db:studio:local": "pnpm with-env pnpm with-local-db drizzle-kit studio --config drizzle.local.config.ts",
    "d1:migrate:local": "wrangler d1 migrations apply prod-turbolink-d1 --local",
    "d1:migrate:remote": "wrangler d1 migrations apply prod-turbolink-d1 --remote",
    "with-env": "dotenv -e .dev.vars --",
    "with-local-db": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit)"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "0.11.0",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "drizzle-orm": "0.32.1",
    "lucide-react": "0.414.0",
    "next": "14.2.5",
    "next-themes": "0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwind-merge": "2.4.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1.12.1",
    "@cloudflare/workers-types": "4.20240722.0",
    "@ianvs/prettier-plugin-sort-imports": "4.3.1",
    "@libsql/client": "0.7.0",
    "@types/node": "20.14.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "cross-env": "7.0.3",
    "dotenv-cli": "7.4.2",
    "drizzle-kit": "0.23.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-drizzle": "0.2.3",
    "eslint-plugin-next-on-pages": "1.12.1",
    "postcss": "8.4.40",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.5",
    "tailwindcss": "3.4.6",
    "typescript": "5.5.4",
    "vercel": "35.2.0",
    "wrangler": "3.66.0"
  }
}
